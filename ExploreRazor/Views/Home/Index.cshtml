@{
    ViewBag.Title = "Home Page";
}
<body>
    @* This is Code Block *@
    @{
        var num1 = 5;
        var num2 = 10;
        var result = num1 + num2;
    }
    @* Inline Markup *@
    <h2>Sum of @num1 + @num2 = @result</h2>
    <br />
    @{
        var number = "32";
        int num;
        @* //This line will raise error because you cannot store string into int variable *@
        @* //num = number; *@
    if (number.IsInt() == true)
    {
        num = number.AsInt();
        <h2>@num  is an integer value.</h2>
    }
    else
    {
        <h2>@number  is not integer.</h2>
    }
    }
    <br />
    @{
        var v = "12.52";
        float f;

        if (v.IsFloat() == true)
        {
            
                f = v.AsFloat();

            <h2>@f is a float.</h2>
        }
    }
    <br />
    @{
        var dec = "123.345";
        decimal d;
        if (dec.IsDecimal() == true)
        {
            d = dec.AsDecimal();
            <h2>@d is a decimal.</h2>
        }
    }
    <br />
    @{
        for (int i = 12; i <= 42 ; i+=2)
        {
            <span>@i,</span>
        }
    }

    <br /><br />

    @{
        int[] arr = { 2, 6, 2, 55, 62, 64, 67 };
        foreach (int x in arr)
        {
            <span>@x, </span>
        }
    }
    @{
        //Single Dimensional Array
        <h3>Single Dimensional Array</h3>
        int[] arrNum = { 1, 3, 5, 7, 11, 13, 17, 19 };
        foreach (int x in arrNum)
        {
            <span>@x, </span>
        }

        //Multi Dimensional Array
        <h3>Multi Dimensional Array</h3>
        string[,] letter = new string[3, 2] { { "a", "b" }, { "c", "d" }, { "e", "f" } };
        for (int i = 0; i < 3; i++)
        {
            for (int j = 0; j < 2; j++)
            {
                <span>@letter[i, j], </span>
            }
            <br />
        }
    }
</body>
